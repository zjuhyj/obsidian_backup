  title = {A Near-Real-Time Approach for Monitoring Forest Disturbance Using {{Landsat}} Time Series: Stochastic Continuous Change Detection},
  shorttitle = {A Near-Real-Time Approach for Monitoring Forest Disturbance Using {{Landsat}} Time Series},
  author = {Ye, Su and Rogan, John and Zhu, Zhe and Eastman, J. Ronald},
  year = {2021},
  month = jan,
  journal = {Remote Sensing of Environment},
  volume = {252},
